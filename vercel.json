{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    },
    {
      "src": "src/server/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/src/server/$1.js" },
    { "source": "/dashboard", "destination": "/dashboard.html" },
    { "source": "/visitor", "destination": "/index.html" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
